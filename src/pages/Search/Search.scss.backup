// pages/Search/Search.scss
@use '../../styles/globals/variables' as *;
@use '../../styles/globals/mixins' as *;

.search-page {
  min-height: 100vh;
  background: #e5e7eb;
  padding: 2rem;
  max-width: 1200px;
  margin: 0 auto;

  @include mobile {
    padding: 1rem;
  }

  &__header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;

    @include mobile {
      margin-bottom: 1.5rem;
    }
  }

  &__back-btn {
    @include button-base;
    background: #f3f4f6;
    border: 2px solid #d1d5db;
    color: #4b5563;
    width: 44px;
    height: 44px;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;

    &:hover {
      background: #e5e7eb;
      color: #1f2937;
      border-color: #9ca3af;
    }
  }

  &__title-section {
    flex: 1;
  }

  &__title {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1a202c;
    margin: 0 0 0.25rem 0;

    @include mobile {
      font-size: 1.5rem;
    }
  }

  &__subtitle {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0;
  }

  &__filter-btn {
    @include button-base;
    background: #f3f4f6;
    border: 2px solid #d1d5db;
    color: #4b5563;
    width: 44px;
    height: 44px;
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;

    &:hover {
      background: #e5e7eb;
      color: #1f2937;
      border-color: #9ca3af;
    }

    &--active {
      background: linear-gradient(135deg, #6366f1, #8b5cf6);
      color: white;
      border-color: #6366f1;
      box-shadow: 0 4px 12px -2px rgba(99, 102, 241, 0.3);

      &:hover {
        background: linear-gradient(135deg, #5558e3, #7c47ed);
      }
    }
  }

  // Search Form
  &__form {
    margin-bottom: 2rem;
    position: relative;
  }

  &__input-container {
    position: relative;
    display: flex;
    align-items: center;
  }

  &__search-icon {
    position: absolute;
    left: 1rem;
    color: #9ca3af;
    z-index: 1;
  }

  &__input {
    width: 100%;
    padding: 1rem 3rem 1rem 3rem;
    border: 2px solid #d1d5db;
    border-radius: 0.75rem;
    background: #f9fafb;
    color: #1f2937;
    font-size: 1rem;
    transition: all 0.2s ease;
    font-weight: 400;

    &:focus {
      outline: none;
      border-color: #6366f1;
      box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
      background: #ffffff;
    }

    &::placeholder {
      color: #9ca3af;
    }

    &:hover:not(:focus) {
      border-color: #9ca3af;
    }
  }

  &__clear-btn {
    @include button-base;
    position: absolute;
    right: 1rem;
    background: #f3f4f6;
    color: #6b7280;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;

    &:hover {
      background: #e5e7eb;
      color: #1f2937;
    }
  }

  // Error Display
  &__error {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem 1rem;
    background: #fef2f2;
    border: 2px solid #fca5a5;
    border-radius: 0.75rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 12px -2px rgba(239, 68, 68, 0.1);
    animation: slideDown 0.3s ease-out;

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  }

  &__error-icon {
    color: #ef4444;
    flex-shrink: 0;
    margin-top: 0.125rem;
  }

  &__error-content {
    flex: 1;
  }

  &__error-message {
    color: #991b1b;
    font-size: 0.875rem;
    font-weight: 500;
    margin: 0;
    line-height: 1.5;
  }

  &__error-dismiss {
    @include button-base;
    color: #dc2626;
    padding: 0.25rem;
    border-radius: 0.375rem;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.2s ease;

    &:hover {
      background: #fee2e2;
      color: #991b1b;
    }

    &:focus {
      outline: none;
      box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.2);
    }
  }

  // Suggestions
  &__suggestions {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: #f9fafb;
    border: 2px solid #d1d5db;
    border-radius: 0.75rem;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.15), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
    z-index: 10;
    max-height: 300px;
    overflow-y: auto;
    margin-top: 0.5rem;
  }

  &__suggestion {
    @include button-base;
    width: 100%;
    padding: 0.875rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-align: left;
    color: #1f2937;
    transition: all 0.2s ease;
    border-bottom: 1px solid #e5e7eb;

    &:hover {
      background: #e0e7ff;
      color: #6366f1;
    }

    &:last-child {
      border-bottom: none;
    }

    svg {
      color: #6b7280;
      flex-shrink: 0;
    }

    span {
      flex: 1;
      font-size: 0.9375rem;
      font-weight: 500;
    }
  }

  // Filters
  &__filters {
    background: #f3f4f6;
    border: 2px solid #d1d5db;
    border-radius: 0.75rem;
    padding: 1.5rem;
    margin-bottom: 2rem;
    box-shadow: 0 2px 8px -2px rgba(0, 0, 0, 0.1);
  }

  &__filter-group {
    margin-bottom: 1.5rem;

    &:last-child {
      margin-bottom: 0;
    }
  }

  &__filter-label {
    display: block;
    font-weight: 600;
    color: #1a202c;
    margin-bottom: 0.75rem;
    font-size: 0.9375rem;
  }

  &__filter-options {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  &__filter-option {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    cursor: pointer;
    font-size: 0.875rem;
    color: #374151;
    font-weight: 500;

    input[type="checkbox"] {
      margin: 0;
      width: 18px;
      height: 18px;
      cursor: pointer;
    }

    &:hover {
      color: #1f2937;
    }
  }

  &__filter-select {
    padding: 0.625rem 0.875rem;
    border: 2px solid #e5e7eb;
    border-radius: 0.5rem;
    background: #ffffff;
    color: #1f2937;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;

    &:focus {
      outline: none;
      border-color: #6366f1;
      box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.08);
    }

    &:hover {
      border-color: #d1d5db;
    }
  }

  // Content
  &__content {
    min-height: 400px;
  }

  &__loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    text-align: center;

    p {
      margin-top: 1rem;
      color: #6b7280;
      font-weight: 500;
      font-size: 0.9375rem;
    }
  }

  &__spinner {
    width: 40px;
    height: 40px;
    border: 3px solid #e5e7eb;
    border-top-color: #6366f1;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  // Results
  &__results {
    background: #f3f4f6;
    border: 2px solid #d1d5db;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 2px 8px -2px rgba(0, 0, 0, 0.1);
  }

  &__results-header {
    padding: 1.5rem;
    border-bottom: 2px solid #d1d5db;
    background: #e5e7eb;

    h2 {
      margin: 0;
      font-size: 1.125rem;
      font-weight: 700;
      color: #1a202c;
    }
  }

  &__results-list {
    max-height: 600px;
    overflow-y: auto;
  }

  &__result {
    display: flex;
    align-items: center;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid #d1d5db;
    cursor: pointer;
    transition: all 0.2s ease;

    &:hover {
      background: #e0e7ff;
    }

    &:last-child {
      border-bottom: none;
    }
  }

  &__result-icon {
    width: 44px;
    height: 44px;
    border-radius: 0.625rem;
    background: linear-gradient(135deg, #ede9fe, #ddd6fe);
    color: #6366f1;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    flex-shrink: 0;
  }

  &__result-content {
    flex: 1;
    min-width: 0;
  }

  &__result-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.375rem;
  }

  &__result-title {
    font-size: 1rem;
    font-weight: 600;
    color: #1a202c;
    margin: 0;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  &__result-type {
    font-size: 0.75rem;
    padding: 0.3125rem 0.625rem;
    background: #e0e7ff;
    color: #4338ca;
    border-radius: 0.375rem;
    flex-shrink: 0;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  &__result-subtitle {
    font-size: 0.875rem;
    color: #6b7280;
    margin: 0 0 0.25rem 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: 500;
  }

  &__result-description {
    font-size: 0.8125rem;
    color: #9ca3af;
    margin: 0;
    line-height: 1.5;
  }

  &__result-arrow {
    color: #9ca3af;
    margin-left: 1rem;
    flex-shrink: 0;
  }

  // No Results
  &__no-results {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 4rem 2rem;
    text-align: center;

    svg {
      color: #d1d5db;
      margin-bottom: 1.5rem;
      font-size: 3.5rem;
    }

    h3 {
      font-size: 1.5rem;
      font-weight: 700;
      color: #1a202c;
      margin: 0 0 1rem 0;
    }

    p {
      color: #6b7280;
      margin: 0 0 0.5rem 0;
      max-width: 400px;
      font-weight: 500;
      font-size: 0.9375rem;
    }
  }

  // Empty State
  &__empty {
    padding: 2rem;
  }

  &__recent {
    margin-bottom: 3rem;
  }

  &__recent-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;

    h3 {
      font-size: 1.125rem;
      font-weight: 700;
      color: #1a202c;
      margin: 0;
    }
  }

  &__clear-recent {
    @include button-base;
    color: #6b7280;
    font-size: 0.875rem;
    padding: 0.375rem 0.75rem;
    border-radius: 0.375rem;
    transition: all 0.2s ease;
    font-weight: 600;

    &:hover {
      background: #f3f4f6;
      color: #1a202c;
    }
  }

  &__recent-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  &__recent-item {
    @include button-base;
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1.125rem;
    text-align: left;
    color: #4b5563;
    border-radius: 0.625rem;
    transition: all 0.2s ease;
    border: 2px solid #d1d5db;
    background: #f3f4f6;

    &:hover {
      background: #e0e7ff;
      border-color: #a5b4fc;
      color: #1a202c;
    }

    svg {
      flex-shrink: 0;
      color: #9ca3af;
      font-size: 1.125rem;
    }

    span {
      flex: 1;
      font-size: 0.9375rem;
      font-weight: 500;
    }
  }

  &__help {
    h3 {
      font-size: 1.125rem;
      font-weight: 700;
      color: #1a202c;
      margin: 0 0 1rem 0;
    }

    ul {
      list-style: none;
      padding: 0;
      margin: 0;

      li {
        color: #6b7280;
        margin-bottom: 0.625rem;
        padding-left: 1.625rem;
        position: relative;
        font-size: 0.9375rem;
        font-weight: 500;

        &::before {
          content: 'â€¢';
          color: #6366f1;
          position: absolute;
          left: 0;
          font-weight: bold;
          font-size: 1.25rem;
        }
      }
    }
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}
