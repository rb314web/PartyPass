  }

  &__description-text {
    margin: 0;
    color: var(--text-secondary);
    font-size: clamp(var(--font-size-md), 1.8vw, var(--font-size-lg));
    line-height: 1.7;
  }

  &__tags {
    margin-top: var(--space-lg);
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  &__tag {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-lg);
    background: rgba(129, 140, 248, 0.15);
    color: rgba(79, 70, 229, 0.9);
    font-size: var(--font-size-xs);
    font-weight: 600;

    svg {
      width: 14px;
      height: 14px;
    }
  }

  &__guest-toolbar {
    position: relative;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: var(--space-sm);
  }

  &__ghost-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-lg);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(148, 163, 184, 0.35);
    background: rgba(255, 255, 255, 0.6);
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    font-weight: 500;
    transition: all var(--transition-normal);
    backdrop-filter: blur(8px);

    &:hover {
      color: var(--text-primary);
      border-color: rgba(99, 102, 241, 0.35);
      box-shadow: var(--shadow-sm);
    }

    &:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      box-shadow: none;
    }

    &--primary {
      background: linear-gradient(135deg, #4f46e5 0%, #6366f1 100%);
      color: var(--white);
      border: none;

      &:hover {
        box-shadow: 0 12px 30px -12px rgba(79, 70, 229, 0.45);
      }
    }
  }

  &__guests-card {
    position: relative;
    overflow: hidden;

    &::after {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(135deg, rgba(99, 102, 241, 0.08) 0%, rgba(14, 165, 233, 0.05) 45%, rgba(255, 255, 255, 0.1) 100%);
      pointer-events: none;
      mix-blend-mode: soft-light;
    }

    > * {
      position: relative;
      z-index: 1;
    }
  }

  &__stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: clamp(var(--space-sm), 2vw, var(--space-md));
    margin-bottom: clamp(var(--space-lg), 2vw, var(--space-2xl));
  }

  &__stat {
    --stat-accent: #1d4ed8;
    display: grid;
    grid-template-columns: auto 1fr;
    align-items: center;
    gap: var(--space-md);
    padding: clamp(var(--space-md), 2vw, var(--space-lg));
    border-radius: var(--radius-xl);
    background: rgba(255, 255, 255, 0.92);
    border: 1px solid rgba(226, 232, 240, 0.9);
    box-shadow: 0 14px 32px -26px rgba(15, 23, 42, 0.28);
    position: relative;

    &::before {
      content: '';
      position: absolute;
      inset: 0;
      border-radius: inherit;
      border: 1px solid rgba(255, 255, 255, 0.35);
      pointer-events: none;
    }

    &-icon {
      width: 48px;
      height: 48px;
      border-radius: 18px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: rgba(var(--stat-accent-rgb, 99, 102, 241), 0.12);
      color: var(--stat-accent);
    }

    &-content {
      display: flex;
      flex-direction: column;
      gap: 6px;
    }

    &-label {
      font-size: var(--font-size-xs);
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: rgba(71, 85, 105, 0.85);
      font-weight: 600;
    }

    &-value {
      font-size: clamp(1.35rem, 2.2vw, 1.9rem);
      font-weight: 700;
      color: #0f172a;
      letter-spacing: -0.01em;
    }

    &--primary {
      --stat-accent: #2563eb;
      --stat-accent-rgb: 37, 99, 235;
    }

    &--success {
      --stat-accent: #10b981;
      --stat-accent-rgb: 16, 185, 129;
    }

    &--warning {
      --stat-accent: #f59e0b;
      --stat-accent-rgb: 245, 158, 11;
    }

    &--info {
      --stat-accent: #6366f1;
      --stat-accent-rgb: 99, 102, 241;
    }

    &--danger {
      --stat-accent: #ef4444;
      --stat-accent-rgb: 239, 68, 68;
    }
  }

  &__guest-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    padding-top: clamp(var(--space-sm), 2vw, var(--space-md));
    border-top: 1px solid rgba(148, 163, 184, 0.2);
  }

  &__guest {
    --guest-accent: rgba(148, 163, 184, 0.35);
    display: grid;
    grid-template-columns: minmax(0, 1fr) auto;
    align-items: center;
    gap: clamp(var(--space-sm), 3vw, var(--space-lg));
    padding: clamp(var(--space-sm), 2vw, var(--space-md)) clamp(var(--space-md), 3vw, var(--space-lg));
    border-radius: var(--radius-xl);
    border: 1px solid rgba(226, 232, 240, 0.9);
    background: rgba(255, 255, 255, 0.92);
    box-shadow: 0 12px 30px -28px rgba(15, 23, 42, 0.32);
    position: relative;

    &::before {
      content: '';
      position: absolute;
      inset: 0;
      border-radius: inherit;
      border: 2px solid transparent;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0)) padding-box,
        linear-gradient(135deg, var(--guest-accent), transparent) border-box;
      pointer-events: none;
    }

    &--accepted,
    &--pending,
    &--maybe,
    &--declined,
    &--unknown {
      --guest-accent: rgba(148, 163, 184, 0.35);
    }

    @media (max-width: 720px) {
      grid-template-columns: 1fr;
      align-items: flex-start;
    }
  }

  &__guest-info {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  &__guest-name {
    font-weight: 700;
    color: #0f172a;
    font-size: clamp(1rem, 2vw, 1.15rem);
  }

  &__guest-email {
    font-size: var(--font-size-sm);
    color: rgba(71, 85, 105, 0.8);
  }

  &__guest-controls {
    display: flex;
    align-items: center;
    gap: clamp(var(--space-xs), 2vw, var(--space-sm));

    @media (max-width: 640px) {
      width: 100%;
      justify-content: space-between;
    }
  }

  &__guest-status-container {
    position: relative;
    display: flex;
    align-items: center;
  }

  &__guest-status-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) clamp(var(--space-sm), 2vw, var(--space-md));
    border-radius: 999px;
  background: rgba(226, 232, 240, 0.65);
  border: 1px solid rgba(148, 163, 184, 0.28);
  color: rgba(55, 65, 81, 0.85);
    font-size: var(--font-size-sm);
    font-weight: 600;
    cursor: pointer;
    transition: background var(--transition-normal), color var(--transition-normal), border-color var(--transition-normal);
    white-space: nowrap;

    &:hover {
      background: rgba(226, 232, 240, 0.9);
      border-color: rgba(148, 163, 184, 0.4);
      color: rgba(30, 41, 59, 0.95);
    }

    @media (max-width: 768px) {
      .event-details__guest-status-label {
        display: none;
      }
    }
  }

  &__guest-status-label {
    font-weight: 600;
    text-transform: uppercase;
    font-size: var(--font-size-xs);
    letter-spacing: 0.04em;
  }

  &__status-dropdown {
    position: absolute;
    top: calc(100% + var(--space-xs));
    right: 0;
    background: var(--white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    padding: var(--space-sm);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    z-index: var(--z-dropdown);
    min-width: 180px;
    border: 1px solid rgba(148, 163, 184, 0.35);
  }

  &__status-dropdown-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    font-size: var(--font-size-sm);
    width: 100%;
    text-align: left;
    border-radius: var(--radius-lg);
    background: transparent;
    color: var(--text-secondary);
    border: none;
    transition: all var(--transition-normal);
    font-weight: 500;
    cursor: pointer;

    svg {
      width: 16px;
      height: 16px;
      flex-shrink: 0;
    }

    &:hover {
      color: var(--text-primary);
      background: rgba(226, 232, 240, 0.7);
    }

    &--active {
      background: rgba(129, 140, 248, 0.22);
      color: #4f46e5;
      font-weight: 600;

      svg {
        color: #4f46e5;
      }
    }
  }

  &__guest-remove {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-xs);
    border-radius: 999px;
    border: none;
  background: rgba(226, 232, 240, 0.6);
  color: rgba(71, 85, 105, 0.7);
    transition: background var(--transition-normal), color var(--transition-normal);

    svg {
      width: 16px;
      height: 16px;
    }

    &:hover {
      background: rgba(226, 232, 240, 0.95);
      color: rgba(30, 41, 59, 0.9);
    }
  }

  &__empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    padding: var(--space-2xl);
    border-radius: var(--radius-xl);
    background: rgba(248, 250, 252, 0.95);
    border: 1px dashed rgba(148, 163, 184, 0.35);
    text-align: center;
    color: var(--text-secondary);

    h3 {
      margin: 0;
      color: var(--text-primary);
    }

    p {
      margin: 0;
      font-size: var(--font-size-sm);
    }
  }

  &__snapshot-grid {
    display: grid;
    gap: var(--space-md);
  }

  &__snapshot-item {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding-bottom: var(--space-sm);
    border-bottom: 1px solid rgba(148, 163, 184, 0.15);

    &:last-child {
      border-bottom: none;
      padding-bottom: 0;
    }
  }

  &__snapshot-label {
    font-size: var(--font-size-xs);
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--text-tertiary);
    font-weight: 600;
  }

  &__snapshot-value {
    font-size: var(--font-size-md);
    font-weight: 600;
    color: var(--text-primary);
  }

  &__map {
    border-radius: var(--radius-lg);
    overflow: hidden;
    border: 1px solid rgba(148, 163, 184, 0.2);
  }

  &__settings-grid {
    display: grid;
    gap: var(--space-lg);
  }

  &__setting {
    display: flex;
    flex-direction: column;
    gap: 6px;
    background: rgba(248, 250, 252, 0.8);
    padding: var(--space-md) var(--space-lg);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(148, 163, 184, 0.18);

    p {
      margin: 0;
      font-size: var(--font-size-sm);
      color: var(--text-secondary);
      line-height: 1.5;
    }
  }

  &__setting-label {
    font-weight: 600;
    font-size: var(--font-size-sm);
    color: var(--text-primary);
  }

  &__flags {
    margin-top: var(--space-lg);
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  &__flag {
    padding: var(--space-xs) var(--space-md);
    border-radius: 999px;
    border: 1px solid rgba(148, 163, 184, 0.35);
    font-size: var(--font-size-xs);
    font-weight: 600;
    color: var(--text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.04em;
    background: rgba(248, 250, 252, 0.4);

    &--active {
      border-color: rgba(79, 70, 229, 0.35);
      color: rgba(79, 70, 229, 0.88);
      background: rgba(79, 70, 229, 0.12);
    }
  }

  &__modal {
    position: fixed;
    inset: 0;
    background: rgba(15, 23, 42, 0.55);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: var(--z-modal);
    padding: var(--space-md);
    backdrop-filter: blur(6px);
  }

  &__modal-content {
    background: rgba(255, 255, 255, 0.98);
    border-radius: clamp(var(--radius-lg), 2vw, 32px);
    box-shadow: 0 24px 55px -28px rgba(15, 23, 42, 0.6);
    width: 100%;
    max-width: 640px;
    max-height: 90vh;
    overflow-y: auto;
    animation: modalOpen 0.3s ease-out;
  }

  &__modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: clamp(var(--space-lg), 2vw, var(--space-2xl));
    border-bottom: 1px solid rgba(148, 163, 184, 0.2);

    h2 {
      margin: 0;
      font-size: clamp(1.25rem, 2vw, 1.5rem);
      color: var(--text-primary);
    }
  }

  &__modal-close {
    background: none;
    border: none;
    color: var(--text-secondary);
    padding: var(--space-xs);
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-normal);

    &:hover {
      color: var(--text-primary);
      background: rgba(226, 232, 240, 0.7);
    }

    &:disabled {
      opacity: 0.5;
      cursor: not-allowed;
      background: none;
    }
  }

  &__modal-body {
    padding: clamp(var(--space-lg), 2vw, var(--space-2xl));
  }

  &__modal-content--danger {
    border: 1px solid rgba(248, 113, 113, 0.35);
  }

  &__modal-body--danger {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  &__modal-warning {
    display: flex;
    align-items: flex-start;
    gap: var(--space-md);
    padding: var(--space-md);
    border-radius: var(--radius-lg);
    background: rgba(248, 113, 113, 0.12);
    border: 1px solid rgba(248, 113, 113, 0.25);
    color: var(--error);

    p {
      margin: 0;
      color: inherit;
      line-height: 1.5;
    }
  }

  &__modal-error {
    margin: 0;
    padding: var(--space-sm) var(--space-md);
    border-radius: var(--radius-lg);
    background: rgba(248, 113, 113, 0.18);
    color: var(--error);
    font-size: var(--font-size-sm);
    border: 1px solid rgba(248, 113, 113, 0.35);
  }

  &__settings-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  &__form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);

    label {
      font-weight: 600;
      color: var(--text-primary);
    }

    input,
    textarea {
      width: 100%;
      padding: var(--space-sm) var(--space-md);
      border: 1px solid rgba(148, 163, 184, 0.4);
      border-radius: var(--radius-lg);
      background: rgba(248, 250, 252, 0.8);
      color: var(--text-primary);
      font-size: var(--font-size-sm);
      transition: border-color var(--transition-normal), box-shadow var(--transition-normal);

      &:focus {
        outline: none;
        border-color: rgba(99, 102, 241, 0.6);
        box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.12);
      }
    }

    textarea {
      resize: vertical;
      min-height: 120px;
    }
  }

  &__modal-footer {
    display: flex;
    justify-content: flex-end;
    gap: var(--space-sm);
    padding: clamp(var(--space-lg), 2vw, var(--space-2xl));
    border-top: 1px solid rgba(148, 163, 184, 0.2);
  }

  &__modal-button {
    padding: var(--space-sm) var(--space-xl);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-sm);
    font-weight: 600;
    transition: all var(--transition-normal);
    border: 1px solid rgba(148, 163, 184, 0.4);
    background: rgba(255, 255, 255, 0.8);
    color: var(--text-secondary);

    &:hover {
      color: var(--text-primary);
      border-color: rgba(99, 102, 241, 0.35);
      box-shadow: var(--shadow-sm);
    }

    &--primary {
      background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
      color: var(--white);
      border: none;

      &:hover {
        box-shadow: 0 15px 35px -18px rgba(79, 70, 229, 0.65);
      }

      &:disabled {
        background: rgba(148, 163, 184, 0.6);
        cursor: not-allowed;
        box-shadow: none;
      }
    }

    &--danger {
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
      color: var(--white);
      border: none;

      &:hover {
        box-shadow: 0 18px 35px -18px rgba(239, 68, 68, 0.55);
      }

      &:disabled {
        background: rgba(239, 68, 68, 0.55);
        cursor: not-allowed;
        box-shadow: none;
      }
    }
  }

  &__guest-dropdown {
    position: absolute;
    top: calc(100% + var(--space-xs));
    right: 0;
    background: rgba(255, 255, 255, 0.97);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    padding: var(--space-sm);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    z-index: var(--z-dropdown);
    min-width: 220px;
    border: 1px solid rgba(148, 163, 184, 0.25);
    backdrop-filter: blur(8px);
  }

  &__dropdown-item {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-sm) var(--space-md);
    font-size: var(--font-size-sm);
    width: 100%;
    text-align: left;
    border-radius: var(--radius-lg);
    background: transparent;
    color: var(--text-secondary);
    border: none;
    transition: all var(--transition-normal);
    font-weight: 500;

    svg {
      width: 16px;
      height: 16px;
    }

    &:hover {
      color: var(--text-primary);
      background: rgba(226, 232, 240, 0.7);
    }
  }

  @media (max-width: 768px) {
    &__toolbar {
      flex-direction: column;
      align-items: flex-start;
    }

    &__toolbar-actions {
      width: 100%;
      justify-content: space-between;
    }

    &__hero {
      padding: var(--space-2xl);
    }

    &__card {
      padding: var(--space-xl);
    }
  }
}

@keyframes modalOpen {
  from {
    opacity: 0;
    transform: translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}