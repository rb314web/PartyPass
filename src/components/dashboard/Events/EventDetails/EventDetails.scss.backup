.event-details {
  min-height: 100vh;
  padding: clamp(1.5rem, 3vw, 2.5rem);
  background: var(--bg-primary, #ffffff);
  max-width: 1400px;
  margin: 0 auto;
  color: var(--text-primary);

  &__loading,
  &__error {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 400px;
    text-align: center;
    gap: var(--space-md);

    .loading-spinner {
      width: 48px;
      height: 48px;
      border: 3px solid rgba(148, 163, 184, 0.2);
      border-top-color: rgba(99, 102, 241, 0.8);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }
  }

  &__toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: clamp(1.5rem, 3vw, 2.5rem);
    gap: var(--space-lg);
  }

  &__back {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.2s ease;
    background: none;
    border: none;
    padding: 0.5rem 0.75rem;
    margin-left: -0.75rem;
    border-radius: 8px;

    &:hover {
      color: var(--text-primary);
    }
  }

  &__toolbar-actions {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  &__toolbar-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 10px;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
    background: var(--bg-secondary, #f8fafc);
    border: 1px solid rgba(148, 163, 184, 0.2);
    color: var(--text-secondary);

    svg {
      width: 18px;
      height: 18px;
    }

    &:hover {
      color: var(--text-primary);
      border-color: rgba(99, 102, 241, 0.3);
      background: rgba(99, 102, 241, 0.05);
    }

    &:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    &--danger {
      color: rgba(239, 68, 68, 0.9);
      border-color: rgba(248, 113, 113, 0.3);

      &:hover {
        background: rgba(248, 113, 113, 0.08);
        border-color: rgba(248, 113, 113, 0.4);
      }
    }
  }

  &__hero {
    background: var(--bg-secondary, #f8fafc);
    border: 1px solid rgba(148, 163, 184, 0.15);
    border-radius: 16px;
    padding: clamp(1.5rem, 3vw, 2.5rem);
    margin-bottom: clamp(1.5rem, 3vw, 2.5rem);
    display: flex;
    flex-direction: column;
    gap: clamp(1.25rem, 2.5vw, 2rem);
  }

  &__hero-header {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  &__hero-title-row {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  &__title {
    margin: 0;
    font-size: clamp(1.75rem, 3vw, 2.25rem);
    font-weight: 700;
    line-height: 1.2;
    color: var(--text-primary);
  }

  &__status-badge {
    --status-badge-bg: rgba(148, 163, 184, 0.12);
    --status-badge-color: rgba(71, 85, 105, 0.9);
    --status-badge-border: rgba(148, 163, 184, 0.25);
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.4rem 0.9rem;
    border-radius: 999px;
    font-weight: 600;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: var(--status-badge-color);
    background: var(--status-badge-bg);
    border: 1px solid var(--status-badge-border);
    flex-shrink: 0;

    svg {
      width: 14px;
      height: 14px;
    }
  }

  &__hero-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
  }

  &__info-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;

    svg {
      width: 18px;
      height: 18px;
      color: var(--text-tertiary);
      flex-shrink: 0;
      margin-top: 2px;
    }

    > div {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
      min-width: 0;
    }
  }

  &__info-label {
    font-size: 0.75rem;
    color: var(--text-tertiary);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  &__info-value {
    font-size: 0.95rem;
    color: var(--text-primary);
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  &__info-link {
    color: rgba(99, 102, 241, 0.9);
    text-decoration: none;
    transition: color 0.2s ease;

    &:hover {
      color: rgba(79, 70, 229, 1);
      text-decoration: underline;
    }
  }

  &__hero-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 0.75rem;
    padding-top: 0.5rem;
    border-top: 1px solid rgba(148, 163, 184, 0.15);
  }

  &__stat-compact {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    border-radius: 10px;
    background: var(--bg-primary, #ffffff);
    border: 1px solid rgba(148, 163, 184, 0.12);

    svg {
      width: 16px;
      height: 16px;
      flex-shrink: 0;
    }

    > div {
      display: flex;
      flex-direction: column;
      gap: 0.2rem;
      min-width: 0;
    }

    span {
      font-size: 0.75rem;
      color: var(--text-tertiary);
    }

    strong {
      font-size: 1.1rem;
      font-weight: 700;
      color: var(--text-primary);
    }

    &--primary {
      flex-direction: column;
      align-items: stretch;
      grid-column: span 2;
      
      .event-details__stat-compact-header {
        display: flex;
        justify-content: space-between;
        align-items: baseline;
        margin-bottom: 0.5rem;

        span {
          font-size: 0.8rem;
        }

        strong {
          font-size: 1.5rem;
        }
      }
    }

    &--success {
      svg { color: rgba(34, 197, 94, 0.9); }
    }

    &--warning {
      svg { color: rgba(251, 146, 60, 0.9); }
    }

    &--info {
      svg { color: rgba(59, 130, 246, 0.9); }
    }

    &--danger {
      svg { color: rgba(239, 68, 68, 0.9); }
    }
  }

  &__stat-compact-bar {
    height: 6px;
    background: rgba(148, 163, 184, 0.15);
    border-radius: 999px;
    overflow: hidden;
  }

  &__stat-compact-fill {
    height: 100%;
    background: linear-gradient(90deg, rgba(99, 102, 241, 0.8) 0%, rgba(139, 92, 246, 0.9) 100%);
    border-radius: 999px;
    transition: width 0.6s ease;
  }

  &__timeline-chip {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.65rem 1.1rem;
    border-radius: 10px;
    font-size: 0.875rem;
    font-weight: 500;
    align-self: flex-start;

    svg {
      width: 16px;
      height: 16px;
    }

    &--future {
      background: rgba(59, 130, 246, 0.1);
      color: rgba(30, 64, 175, 0.95);
      border: 1px solid rgba(59, 130, 246, 0.25);
    }

    &--today {
      background: rgba(251, 146, 60, 0.1);
      color: rgba(154, 52, 18, 0.95);
      border: 1px solid rgba(251, 146, 60, 0.25);
    }

    &--live {
      background: rgba(34, 197, 94, 0.1);
      color: rgba(20, 83, 45, 0.95);
      border: 1px solid rgba(34, 197, 94, 0.25);
    }

    &--past {
      background: rgba(148, 163, 184, 0.1);
      color: rgba(71, 85, 105, 0.95);
      border: 1px solid rgba(148, 163, 184, 0.25);
    }
  }

  &__layout {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 1.5rem;
    margin-bottom: 2rem;

    @media (max-width: 1024px) {
      grid-template-columns: 1fr;
    }
  }

  &__column {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;

    &--main {
      min-width: 0;
    }

    &--sidebar {
      @media (max-width: 1024px) {
        order: 1;
      }
    }
  }

  &__card {
    background: var(--bg-primary, #ffffff);
    border: 1px solid rgba(148, 163, 184, 0.15);
    border-radius: 14px;
    padding: clamp(1.25rem, 2.5vw, 1.75rem);
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  &__card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  &__card-title {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-primary);

    svg {
      width: 20px;
      height: 20px;
      color: rgba(99, 102, 241, 0.8);
    }
  }

  &__pill {
    display: inline-flex;
    align-items: center;
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    font-size: 0.75rem;
    font-weight: 600;
    background: rgba(99, 102, 241, 0.1);
    color: rgba(79, 70, 229, 0.95);
    border: 1px solid rgba(99, 102, 241, 0.2);
  }

  &__description-text {
    margin: 0;
    line-height: 1.7;
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  &__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  &__tag {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.4rem 0.8rem;
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 500;
    background: rgba(148, 163, 184, 0.08);
    color: var(--text-secondary);
    border: 1px solid rgba(148, 163, 184, 0.15);

    svg {
      width: 14px;
      height: 14px;
    }
  }

  &__guest-toolbar {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    position: relative;
  }

  &__icon-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 38px;
    height: 38px;
    border-radius: 8px;
    border: 1px solid rgba(148, 163, 184, 0.2);
    background: var(--bg-secondary, #f8fafc);
    color: var(--text-secondary);
    transition: all 0.2s ease;

    &:hover {
      border-color: rgba(99, 102, 241, 0.3);
      background: rgba(99, 102, 241, 0.05);
      color: var(--text-primary);
    }

    &:disabled {
      opacity: 0.4;
      cursor: not-allowed;
    }
  }

  &__primary-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1.1rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    background: rgba(99, 102, 241, 0.95);
    color: #ffffff;
    border: none;
    transition: all 0.2s ease;

    &:hover {
      background: rgba(79, 70, 229, 1);
      box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }
  }

  &__guest-dropdown {
    position: absolute;
    top: calc(100% + 0.5rem);
    right: 0;
    background: var(--bg-primary, #ffffff);
    border: 1px solid rgba(148, 163, 184, 0.2);
    border-radius: 10px;
    box-shadow: 0 10px 40px rgba(15, 23, 42, 0.15);
    padding: 0.5rem;
    min-width: 200px;
    z-index: 100;
  }

  &__dropdown-item {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    width: 100%;
    padding: 0.7rem 0.9rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary);
    background: none;
    border: none;
    text-align: left;
    transition: all 0.15s ease;

    svg {
      width: 16px;
      height: 16px;
    }

    &:hover {
      background: rgba(99, 102, 241, 0.08);
      color: var(--text-primary);
    }
  }

  &__guest-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  &__guest-row {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border-radius: 10px;
    background: var(--bg-secondary, #f8fafc);
    border: 1px solid rgba(148, 163, 184, 0.12);
    transition: all 0.2s ease;

    &:hover {
      border-color: rgba(99, 102, 241, 0.25);
      box-shadow: 0 4px 12px rgba(15, 23, 42, 0.06);
    }
  }

  &__guest-avatar {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.15) 0%, rgba(139, 92, 246, 0.15) 100%);
    color: rgba(79, 70, 229, 0.9);
    font-size: 0.85rem;
    font-weight: 700;
    flex-shrink: 0;
  }

  &__guest-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
    min-width: 0;
  }

  &__guest-name {
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  &__guest-email {
    font-size: 0.8rem;
    color: var(--text-tertiary);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  &__guest-controls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  &__guest-status-container {
    position: relative;
  }

  &__status-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.9rem;
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 600;
    border: 1px solid;
    transition: all 0.2s ease;

    svg {
      width: 14px;
      height: 14px;
    }

    &--accepted {
      background: rgba(34, 197, 94, 0.08);
      color: rgba(20, 83, 45, 0.95);
      border-color: rgba(34, 197, 94, 0.25);

      &:hover {
        background: rgba(34, 197, 94, 0.12);
      }
    }

    &--pending {
      background: rgba(251, 146, 60, 0.08);
      color: rgba(154, 52, 18, 0.95);
      border-color: rgba(251, 146, 60, 0.25);

      &:hover {
        background: rgba(251, 146, 60, 0.12);
      }
    }

    &--maybe {
      background: rgba(59, 130, 246, 0.08);
      color: rgba(30, 64, 175, 0.95);
      border-color: rgba(59, 130, 246, 0.25);

      &:hover {
        background: rgba(59, 130, 246, 0.12);
      }
    }

    &--declined {
      background: rgba(239, 68, 68, 0.08);
      color: rgba(127, 29, 29, 0.95);
      border-color: rgba(239, 68, 68, 0.25);

      &:hover {
        background: rgba(239, 68, 68, 0.12);
      }
    }
  }

  &__status-dropdown {
    position: absolute;
    top: calc(100% + 0.5rem);
    right: 0;
    background: var(--bg-primary, #ffffff);
    border: 1px solid rgba(148, 163, 184, 0.2);
    border-radius: 10px;
    box-shadow: 0 10px 40px rgba(15, 23, 42, 0.15);
    padding: 0.5rem;
    min-width: 160px;
    z-index: 100;
  }

  &__status-dropdown-item {
    display: flex;
    align-items: center;
    gap: 0.65rem;
    width: 100%;
    padding: 0.7rem 0.9rem;
    border-radius: 8px;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--text-secondary);
    background: none;
    border: none;
    text-align: left;
    transition: all 0.15s ease;

    svg {
      width: 16px;
      height: 16px;
    }

    &:hover {
      background: rgba(99, 102, 241, 0.08);
      color: var(--text-primary);
    }

    &--active {
      background: rgba(99, 102, 241, 0.12);
      color: rgba(79, 70, 229, 0.95);
      font-weight: 600;
    }
  }

  @media (max-width: 768px) {
    padding: 1.25rem;

    &__toolbar {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    &__layout {
      gap: 1.25rem;
    }

    &__hero {
      padding: 1.5rem;
    }

    &__hero-info-grid {
      grid-template-columns: 1fr;
    }

    &__hero-stats {
      grid-template-columns: 1fr;
      
      .event-details__stat-compact--primary {
        grid-column: span 1;
      }
    }

    &__guest-row {
      flex-wrap: wrap;
    }

    &__guest-controls {
      width: 100%;
      justify-content: space-between;
    }
  }
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
